{
  "name": "react-frost-core",
  "version": "0.0.3",
  "description": "The library of core frost components.",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "echo 'implement me'",
    "build-app-dev": "webpack-dev-server",
    "build-app-prod": "NODE_ENV=production webpack",
    "deploy": "npm run build-app-prod && gh-pages -d public",
    "postpublish": "codecov",
    "prepublishOnly": "npm run build",
    "test": "lintly app src && flow && jest"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/dogma-io/react-frost-core.git"
  },
  "keywords": [
    "core",
    "component",
    "components",
    "frost",
    "library",
    "react",
    "ui",
    "widget",
    "widgets"
  ],
  "author": "Matthew Dahl <https://github.com/dogma-io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dogma-io/react-frost-core/issues"
  },
  "homepage": "https://github.com/dogma-io/react-frost-core#readme",
  "devDependencies": {
    "@babel/core": "7.0.0-beta.34",
    "@babel/plugin-proposal-class-properties": "7.0.0-beta.34",
    "@babel/plugin-proposal-object-rest-spread": "7.0.0-beta.34",
    "@babel/preset-env": "7.0.0-beta.34",
    "@babel/preset-flow": "7.0.0-beta.34",
    "@babel/preset-react": "7.0.0-beta.34",
    "babel-core": "^7.0.0-0",
    "babel-jest": "21.2.0",
    "babel-loader": "8.0.0-beta.0",
    "codecov": "3.0.0",
    "css-loader": "0.28.7",
    "enzyme": "3.2.0",
    "enzyme-adapter-react-16": "1.1.0",
    "enzyme-to-json": "3.2.2",
    "extract-text-webpack-plugin": "3.0.2",
    "flow-bin": "0.61.0",
    "gh-pages": "1.1.0",
    "jest": "21.3.0-beta.13",
    "lintly": "0.0.12",
    "postcss": "6.0.14",
    "postcss-cssnext": "3.0.2",
    "postcss-for": "2.1.1",
    "postcss-import": "11.0.0",
    "postcss-loader": "2.0.9",
    "prettier": "1.8.2",
    "prismjs": "1.9.0",
    "react-dom": "16.2.0",
    "react-router-dom": "4.2.2",
    "style-loader": "0.19.0",
    "svg-spritemap-webpack-plugin": "1.0.3",
    "uglifyjs-webpack-plugin": "1.1.2",
    "webpack": "3.10.0",
    "webpack-dev-server": "2.9.7"
  },
  "dependencies": {
    "react": "^16.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.js"
    ],
    "coverageReporters": [
      "json-summary",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleNameMapper": {
      "\\.css$": "<rootDir>/__mocks__/style.js"
    },
    "setupFiles": [
      "<rootDir>/jest-setup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testRegex": "/__tests__/.*-test\\.js$"
  }
}
